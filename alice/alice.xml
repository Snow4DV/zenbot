<context>
     <var name="number" value="$Text"/>
    <input pattern="*">
    <get url="https://www.random.org/integers/?num=1&min=1&max=2&col=1&base=10&format=plain&rnd=new" var="number"/>
    <output value="Ответ на твой вопрос - Да." if="$number == "1""/>
    <output value="Ответ на твой вопрос - Нет." if="$number == "2""/>
    </input>
</context>
